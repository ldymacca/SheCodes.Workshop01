<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;600&family=Public+Sans:wght@300;400&family=Ubuntu:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <link rel=stylesheet" href="/dist/style.cc" />

    <title>Dany E â—¦ Music Links</title>
    <style>
      body {
        margin: 0px 0px 10px 0px;
        padding: 0;
        font-family: "Nunito", sans-serif;
        font-size: 1.125rem;
        line-height: 1.3;
        color: black;
        border-radius: 50%;
      }

      ul {
        text-align: center;
        margin: 0 auto;
        padding: 0px;
      }

      li {
        list-style: none;
        text-align: center;
        padding: 10px 0;
        display: inline-block;
        margin: 0 15px;
        width: fit-content;
      }

      a {
        font-size: 1.125rem;
        text-decoration: none;
        color: black;
      }

      p {
        display: block;
        text-align: center;
      }

      .ProfileName {
        color: black;
        font-family: "Nunito", sans-serif;
        text-align: center;
        font-size: 40px;
        font-weight: bold;
        padding: 0px;
        margin: 10px 10px 10px 10px;
      }

      .row {
        display: table;
        margin: 0 auto;
      }

      .Logo {
        width: 29px;
        height: 29px;
        text-align: left;
        display: block;
        margin: 0px, 10px, 0px, 0px;
        padding: 09px;
        border-radius: 0px, 10px, auto;
      }

      .ProfilePic {
        width: 400px;
        display: block;
        margin: 0 auto;
        padding: 09px;
        border-radius: 50%;
      }

      .header {
        padding: 0px;
        background-color: #efe5fe;
      }

      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
      }

      .nav-menu {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #efe5fe;
      }

      .nav-item {
        margin-left: 5rem;
        text-align: center;
        align-items: center;
      }

      .nav-link {
        font-size: 1.6rem;
        font-weight: 300;
        color: black;
      }

      .nav-link:hover {
        color: #9ed103;
        font-family: "Nunito", sans-serif;
        font-weight: 500;
      }

      .hamburger {
        display: none;
      }
      .bar {
        display: block;
        width: 26px;
        height: 2px;
        margin-bottom: 3px;
        -webkit-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
        background-color: #101010;
      }

      .icons {
        width: 30px;
      }

      .icons:hover {
        fill: #9ed103;
      }

      .image-grid {
        --gap: 10px;
        --num-cols: 3;
        --row-height: 250px;
        --row-width: 250px;

        box-sizing: border-box;
        padding: var(--gap);

        display: grid;
        grid-template-columns: repeat(var(--num-cols), 1fr);
        grid-auto-rows: var(--row-height);
        gap: var(--gap);
      }

      .image-grid > img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }

      .xop-box {
	width: 100%;
	height: 100%;
	position: relative;
	cursor: pointer;
    border-radius: 10px;
    -webkit-transition: 0.3s ease-in-out, 
    -webkit-transform 0.3s ease-in-out;
	-moz-transition:  0.3s ease-in-out, 
    -moz-transform 0.3s ease-in-out;
    transition: all 0.3s ease-in-out, 
    transform 0.3s ease-in-out, ;
}

.xop-box:hover {
	transform: scale(1.05); 
}

      @media only screen and (max-width: 768px) {
        .nav-menu {
          position: fixed;
          left: -100%;
          top: 5rem;
          flex-direction: column;
          background-color: #fff;
          width: 100%;
          border-radius: 0px;
          text-align: center;
          transition: 0.3s;
          box-shadow: 0 10px 27px rgba(0, 0, 0, 0.05);
        }

        .nav-menu.active {
          left: 0;
        }

        .nav-item {
          margin: 2.5rem 0;
        }

        .hamburger {
          display: block;
          cursor: pointer;
        }

        .hamburger.active .bar:nth-child(2) {
          opacity: 0;
        }

        .hamburger.active .bar:nth-child(1) {
          -webkit-transform: translateY(8px) rotate(45deg);
          transform: translateY(8px) rotate(45deg);
        }

        .hamburger.active .bar:nth-child(3) {
          -webkit-transform: translateY(-8px) rotate(-45deg);
          transform: translateY(-8px) rotate(-45deg);
        }

        .image-grid {
          --num-cols: 2;
          --row-height: 200px;
        }
      }
    </style>
  </head>
  <body>
    <header class="header">
      <nav class="navbar">
        <a href="/" class="header__logo">
          <img src="img/web.png" alt="Logo" class="Logo" />
        </a>

        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>

        <ul class="nav-menu">
          <li class="nav-item">
            <a href="#" class="nav-link">Services</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">Blog</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">About</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link">Contact</a>
          </li>
        </ul>
      </nav>
    </header>
    <h1>
      <img
        src="https://i1.sndcdn.com/avatars-000684134345-qa1pet-t500x500.jpg"
        alt="ProfilePic"
        class="ProfilePic"
      />
    </h1>
    <h2>
      <p class="ProfileName">Dany E</p>
    </h2>

    <div class="info-section">
      <section class="info-section-container">
        <ul>
          <li>
            <a href="https://dany-e.net/" target="_blank">
              <img src="img/web.svg" alt="Web" class="icons" />
            </a>
          </li>
          <li>
            <a href="https://ra.co/dj/danye" target="_blank">
              <img src="img/residentadvisor.svg" alt="RA" class="icons" />
            </a>
          </li>
          <li>
            <a href="https://www.mixcloud.com/0danye0/" target="_blank">
              <img src="img/mixcloud.svg" alt="Mixcloud" class="icons" />
            </a>
          </li>

          <a href="https://dany-e.bandcamp.com/" target="_blank">
            <img src="img/bandcamp.svg" alt="Bandcamp" class="icons" />
          </a>

          <li class="Facebook">
            <a href="https://www.facebook.com/danyemusic" target="_blank">
              <img src="img/facebook.svg" alt="Facebook" class="icons" />
            </a>
          </li>

          <li class="Soundcloud">
            <a href="https://soundcloud.com/0danye0" target="_blank">
              <img src="img/soundcloud.svg" alt="Soundcloud" class="icons" />
            </a>
          </li>
        </ul>
      </section>
    </div>

    <p>Releases</p>
    <div class="image-grid  xop-box">
      <img
        src="img/Release_1.png"
        alt="releases_1"
        class="image-grid-centered"
      />
      </a>
    </div>

    <p>Sets</p>
    <div class="image-grid xop-box">
      <img src="img/Set_1.jpg" alt="Set_1" />
      <img src="img/Set_2.jpg" alt="Set_2" />
      <img src="img/Set_3.jpg" alt="Set_3" />
    </div>

    <p>Youtube</p>
    <div class="image-grid xop-box">
      <img src="img/redlightradio.png" alt="Youtube_1" />
      <img src="img/redlightradio.png" alt="Youtube_2" />
    </div>
    <script>
      const hamburger = document.querySelector(".hamburger");
      const navMenu = document.querySelector(".nav-menu");
      const navLink = document.querySelectorAll(".nav-link");

      hamburger.addEventListener("click", mobileMenu);
      navLink.forEach((n) => n.addEventListener("click", closeMenu));

      function mobileMenu() {
        hamburger.classList.toggle("active");
        navMenu.classList.toggle("active");
      }

      function closeMenu() {
        hamburger.classList.remove("active");
        navMenu.classList.remove("active");
      }
    </script>
  </body>
</html>
